<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@drawable/subject_row"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingHorizontal="15dp"
            android:paddingVertical="7dp"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/lesson_row_mark"
            android:id="@+id/lesson_row_subject"/>



        <TextView
            android:id="@+id/lesson_row_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingHorizontal="15dp"
            android:paddingVertical="7dp"
            android:layout_alignParentEnd="true"
            android:text="5" />


    </RelativeLayout>



    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="3dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 2 4 3"
        android:textColor="@android:color/primary_text_light"
        android:textSize="15sp"
        android:padding="17dp"
        android:id="@+id/lesson_row_description"/>
    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="3dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 2 4 3"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:padding="17dp"
        android:id="@+id/lesson_row_homework"/>

</LinearLayout>